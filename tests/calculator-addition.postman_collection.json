{
  "info": {
    "_postman_id": "e3e3d9c2-5e9a-4d73-8d7f-0dfc7cf93c7a",
    "name": "Calculator Addition Test",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Test Addition - Basic Integers",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://calculator-service.default.svc.cluster.local/add?a=5&b=3",
          "protocol": "http",
          "host": [
            "calculator-service",
            "default",
            "svc",
            "cluster",
            "local"
          ],
          "path": [
            "add"
          ],
          "query": [
            {
              "key": "a",
              "value": "5"
            },
            {
              "key": "b",
              "value": "3"
            }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response has correct structure', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('result');",
              "    pm.expect(jsonData).to.have.property('operation');",
              "    pm.expect(jsonData.operation).to.eql('addition');",
              "});",
              "",
              "pm.test('Addition is correct: 5 + 3 = 8', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.result).to.eql(8);",
              "});",
              "",
              "pm.test('Content-Type is application/json', function () {",
              "    pm.response.to.have.header('Content-Type');",
              "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
