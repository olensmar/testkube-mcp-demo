{
  "info": {
    "name": "Calculator Addition Test",
    "_postman_id": "calc-12345-67890-abcdef",
    "description": "Collection to test the addition endpoint of calculator service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Test Addition - Basic Integers",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Response has correct structure\", function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('operation');",
              "    pm.expect(jsonData).to.have.property('a');",
              "    pm.expect(jsonData).to.have.property('b');",
              "    pm.expect(jsonData).to.have.property('result');",
              "});",
              "pm.test(\"Addition is correct: 5 + 3 = 8\", function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.operation).to.eql('addition');",
              "    pm.expect(jsonData.a).to.eql(5);",
              "    pm.expect(jsonData.b).to.eql(3);",
              "    pm.expect(jsonData.result).to.eql(8);",
              "});",
              "pm.test(\"Content-Type is application/json\", function () {",
              "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://calculator-service.default.svc.cluster.local/add?a=5&b=3",
          "protocol": "http",
          "host": [
            "calculator-service",
            "default",
            "svc",
            "cluster",
            "local"
          ],
          "path": ["add"],
          "query": [
            {
              "key": "a",
              "value": "5"
            },
            {
              "key": "b", 
              "value": "3"
            }
          ]
        }
      },
      "response": []
    },
